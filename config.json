{
    "name": "Mnist_LeNet",
    "n_gpu": 1,

    "arch": {
        "type": "MnistModel",
        "args": {}
    },
    "train_data_loader": {
        "type": "DataLoader",
        "args":{
            "batch_size": 8,
            "shuffle": true,
            "num_workers": 8,
            "drop_last": true,
            "pin_memory": true,
            "prefetch_factor": 4

        }
    },
    "valid_data_loader": {
        "type": "DataLoader",
        "args":{
            "batch_size": 4,
            "shuffle": false,
            "num_workers": 0,
            "drop_last": false,
            "pin_memory": true
        }
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
