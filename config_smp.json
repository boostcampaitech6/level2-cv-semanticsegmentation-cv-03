{
    "n_gpu": 1,
    "arch": {
        "type": "Unet",
        "args": {
            "num_classes": 29,
            "encoder_name": "resnet34",
            "encoder_weights": "imagenet"
        }
    },
    "train_data_loader": {
        "type": "DataLoader",
        "args":{
            "batch_size": 12,
            "shuffle": true,
            "num_workers": 8,
            "drop_last": false,
            "pin_memory": true
        }
    },
    "valid_data_loader": {
        "type": "DataLoader",
        "args":{
            "batch_size": 4,
            "shuffle": false,
            "num_workers": 4,
            "drop_last": false,
            "pin_memory": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_with_logits_loss",
    "metrics": [
        "dice_coef"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Trainer",
        "args": {},

        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 10,

        "monitor": "min val_loss",
        "early_stop": 10
    },
    "threshold": {
        "pred_thr": 0.5
    },
    "wandb": {
        "project_name": "segmentation",
        "entity": "funfun_seg",
        "exp_name": "test"
    },
    "path": {
        "train_path": "/data/ephemeral/home/datasets/train/DCM",
        "test_path": "/data/ephemeral/home/datasets/test/DCM",
        "label_path": "/data/ephemeral/home/datasets/train/outputs_json",
        "mmap_path": "/data/ephemeral/home/datasets/train_mmap",
        "train_pickle_path": "/data/ephemeral/home/datasets/pngs.pickle",
        "label_pickle_path": "/data/ephemeral/home/datasets/jsons.pickle",
        "data_pickle_path": "/data/ephemeral/home/datasets/data.pickle"
    }
}
